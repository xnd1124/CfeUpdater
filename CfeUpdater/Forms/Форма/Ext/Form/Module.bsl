	ИмяДекорации = "Декорация" + ДопПараметры.ИмяРеквизита;
	Элементы[ИмяДекорации].Заголовок = Ждать ОписаниеКонфигурации(Результат[0]);
	Элементы[ИмяДекорации].ЦветТекста = ЦветТекста(Элементы[ИмяДекорации].Заголовок);
